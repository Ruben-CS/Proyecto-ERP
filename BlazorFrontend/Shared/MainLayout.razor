<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudContainer>
    <MudContainer Class="d-flex align-center justify-center mud-width-full"
                  style="height:100vh;" MaxWidth="MaxWidth.ExtraLarge">
        <MudPaper Height="400px" Width="100%">
            <MudContainer Fixed="true">
                <MudPaper Height="400px" Width="100%" Square="true" Class="mud-theme-none
