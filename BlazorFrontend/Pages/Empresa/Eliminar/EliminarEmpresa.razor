@inject ISnackbar Snackbar
@inject HttpClient HttpClient

<MudDialog SelectedEmpresaId="@SelectedEmpresaId" Style="border-radius: 15px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1"/>
            Desea elmininar esta empresa?
        </MudText>
    </TitleContent>
    <DialogActions>
        <MudButton Variant="Variant.Text"
                   Color="Color.Dark"
                   OnClick="Cancel"
                   StartIcon="@Icons.Material.Rounded.Cancel"
                   Class="rounded-pill">
            Cancelar
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Error"
                   OnClick="DeleteServer"
                   Class="rounded-pill"
                   StartIcon="@Icons.Material.Rounded.Delete">
            Eliminar
        </MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public EventCallback<EmpresaDto> OnEmpresaListChange { get; set; }

    [Parameter]
    public int SelectedEmpresaId { get; set; }

    private void Cancel() => MudDialog.Close();

    private async void DeleteServer()
    {
        var url = $"https://localhost:44378/empresas?id={SelectedEmpresaId}";
        var response = await HttpClient.DeleteAsync(url);

        if (!response.IsSuccessStatusCode) return;
        var deletedEmpresa = await response.Content.ReadFromJsonAsync<EmpresaDto>();
        await OnEmpresaListChange.InvokeAsync(deletedEmpresa);
        Snackbar.Add("Empresa borrada exitosamente", Severity.Success);
        MudDialog.Close(DialogResult.Ok(response));
    }

}