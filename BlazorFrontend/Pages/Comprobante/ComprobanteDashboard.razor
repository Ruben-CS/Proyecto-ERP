@page "/comprobantes/overview/{idempresa:int}"
@layout ComprobanteLayout
@inject ISnackbar Snackbar
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<NavBarComponent IdEmpresa="@IdEmpresa"/>
<MudText Align="Align.Start" Typo="Typo.h5">Comprobantes</MudText>

<ComprobanteGrid IdEmpresa="@IdEmpresa"/>
<MudTable Dense="true"
          Hover="true"
          Striped="true"
          RowsPerPage="4"
          T="IEnumerable<int>">
    <HeaderContent>
        <MudTh>Cuenta</MudTh>
        <MudTh>Glosa</MudTh>
        <MudTh>Debe</MudTh>
        <MudTh>Haber</MudTh>
        <MudTh>Acciones</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Cuenta"></MudTd>
        <MudTd DataLabel="Glosa"></MudTd>
        <MudTd DataLabel="Debe"></MudTd>
        <MudTd DataLabel="Haber"></MudTd>
        <MudTd DataLabel="Acciones"></MudTd>
    </RowTemplate>
    <FooterContent>
        <MudTd></MudTd>
        <MudTd></MudTd>
        <MudTd>Total Debe: </MudTd>
        <MudTd>Total Haber: </MudTd>
        <MudTd></MudTd>
    </FooterContent>
</MudTable>