@using global::Services.Cuenta
@inject HttpClient HttpClient
@inject CuentaService CuentaService

<MudDialog>
    <DialogContent>
        <MudStack Row="true">
            <MudTextField @bind-Value="Glosa"
                          Label="Glosa"
                          Variant="Variant.Filled"
                          Style="width: 800px;"/>
            <MudTextField @bind-Value="@Debe"
                          Label="Debe"
                          Variant="Variant.Filled"
                          Style="width: 80px; text-align: right"
                          Placeholder="0.00"
                          Class="right-aligned-input"/>
            <MudTextField @bind-Value="@Haber"
                          Label="Haber"
                          Variant="Variant.Filled"
                          Style="width: 80px; text-align: right"
                          Class="right-aligned-input"
                          Placeholder="0.00"/>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudDivider/>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

<style>
    .right-aligned-input input {
        text-align: right;
    }
</style>