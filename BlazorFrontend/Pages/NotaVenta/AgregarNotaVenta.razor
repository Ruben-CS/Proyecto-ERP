@page "/agregarNotaVenta/{idempresa:int}"
@using global::Services.ArticuloService
@using global::Services.LoteService
@using global::Services.NotaService
@layout ComprobanteLayout
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@inject IDialogService DialogService
@inject ArticuloService ArticuloService
@inject NotaService NotaService
@inject IJSRuntime JsRuntime
@inject ISnackbar Snackbar
@inject LoteService LoteService


<NavBarComponent IdEmpresa="@IdEmpresa"/>

<MudText Typo="Typo.h5" GutterBottom="true">
    <MudTooltip Text="Volver al listado">
        <MudIconButton Size="Size.Medium"
                       Icon="@Icons.Material.Filled.ArrowBack"
                       Color="Color.Dark"
                       OnClick="@(GoBack)"
                       Style="align-self: center"/>
    </MudTooltip>
    Datos de la nota de venta
</MudText>

<MudDivider DividerType="DividerType.Middle"
            Light="false"
            Style="border-top-width: 3px;"
            Class="mb-5"/>

<MudPaper Elevation="2" Class="p-4 fade-in" Style="border-radius: 15px;">
    <MudForm @ref="_form" @bind-IsValid="@_success">
        <MudStack Row="true">
            <MudTextField Variant="Variant.Outlined"
                          Disabled="true"
                          Margin="Margin.Dense"
                          Label="Nro"
                          T="string"
                          @bind-Text="NroNota"/>
            <MudTextField Variant="Variant.Outlined"
                          Required="true"
                          RequiredError="La descripcion no puede estar vacia"
                          Label="Descripcion"
                          Margin="Margin.Dense"
                          T="string"
                          @bind-Text="Descripcion"
                          Immediate="true"/>
            <MudDatePicker Mask="@(new DateMask("dd/MM/yyyy"))"
                           DateFormat="dd/MM/yyyy"
                           Editable="true"
                           Label="Fecha de ingreso"
                           @bind-Date="@Fecha"
                           Placeholder="dd/MM/yyyy"
                           Variant="Variant.Outlined"
                           Margin="Margin.Dense"
                           Rounded="true"/>
        </MudStack>
    </MudForm>
    <MudStack Row="true" Class="mt-3 fade-in" Style="justify-content: space-between">
        <MudTooltip Text="Agregar nota de compra"
                    ShowOnClick="false"
                    ShowOnFocus="false">
            <MudFab Color="Color.Success"
                    IconSize="Size.Small"
                    StartIcon="@Icons.Material.Rounded.PostAdd"
                    Size="Size.Small"
                    Class="squircle-fab"
                    Disabled="@(!_success)"
                    OnClick="AgregarVenta"/>
        </MudTooltip>
        <MudTooltip Text="Agregar detalles"
                    ShowOnClick="false"
                    ShowOnFocus="false">
            <MudFab Color="Color.Info"
                    IconSize="Size.Small"
                    StartIcon="@Icons.Material.Rounded.NoteAdd"
                    Size="Size.Small"
                    Class="squircle-fab"
                    OnClick="OpenAgregarDetalle"/>
        </MudTooltip>
    </MudStack>
</MudPaper>

<DetalleNotaVentaTable DetalleCompra="_detalleParaVenta"
                       IdEmpresa="IdEmpresa"
                       Articulos="Articulos"/>

<style>
    .right-aligned-input input {
        text-align: right;
    }

    .squircle-fab {
        border-radius: 30% !important;
        box-shadow: 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12) !important;
    }
</style>