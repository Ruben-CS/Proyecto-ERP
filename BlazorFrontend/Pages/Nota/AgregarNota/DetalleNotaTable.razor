@inject IDialogService DialogService

<MudPaper Elevation="2" Class="p-3 mt-4 fade-in" Style="border-radius: 15px;">
    <MudTable Hover="true"
              Dense="true"
              RowsPerPage="4"
              Bordered="true"
              Elevation="0"
              Style="border-radius: 15px;"
              Items="DetalleCompra"
              Striped="true">
        <HeaderContent>
            <MudTh>Articulo</MudTh>
            <MudTh>Cantidad</MudTh>
            <MudTh>Precio</MudTh>
            <MudTh>Subtotal</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@GetArticuloName(context.IdArticulo)</MudTd>
            <MudTd>@context.Cantidad</MudTd>
            <MudTd>@context.PrecioCompra</MudTd>
            <MudTd>@(context.Cantidad * context.PrecioCompra)</MudTd>
        </RowTemplate>
        <FooterContent>
            <MudTh/>
            <MudTh/>
            <MudTh/>
            <MudTh>Total: @Total</MudTh>
        </FooterContent>
    </MudTable>
</MudPaper>