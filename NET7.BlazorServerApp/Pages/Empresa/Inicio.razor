@page "/inicio"

<Modal @ref="_modal" title="Modal title" IsVerticallyCentered="true" Style="">
    <BodyTemplate>
        <_EmpresaUpsert></_EmpresaUpsert>
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">
            Close
        </Button>
        <Button Color="ButtonColor.Primary">
            Save changes
        </Button>
    </FooterTemplate>
</Modal>


<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Inicio</h1>
            <p>Esta es la página de inicio</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <Button Color="ButtonColor.Primary" @onclick="OnShowModalClick">CrearEmpresa</Button>
        </div>
    </div>
</div>

@code {
    private Modal _modal;

    public string styles = "background-color: rgba(255, 255, 255, 0.8);box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);border-radius: 10px;";

    private async Task OnShowModalClick()
    {
        await _modal.ShowAsync();
    }

    private async Task OnHideModalClick()
    {
        await _modal?.HideAsync();
    }

}