@inherits LayoutComponentBase

<MudThemeProvider />
<MudContainer Class="d-flex align-center justify-center mud-width-full"  style="height:100vh;">
<MudPaper Height="400px" Width="100%" >
        <MudContainer Fixed="true" Class="d-flex align-center justify-center mud-width-full" >
            <MudPaper Height="400px" Width="100%" Square="true" Class="mud-theme-primary">
                @Body
            </MudPaper>
        </MudContainer>
    </MudPaper>
